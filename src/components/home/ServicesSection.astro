---
import "../../styles/home-page.css";

// Ensure these image paths are correct based on your file structure
import ServicesImage1 from "../../assets/Services/web-developer-services-functional-website-develope.avif";
import ServicesImage2 from "../../assets/Services/web-developer-services-seo-and-speed.avif";
---

<section id="services" class="services section">
  <div class="services-content container">
    <h1 class="h1-margin-bottom">Services I Offer</h1>
    
    <p class="services-intro">
