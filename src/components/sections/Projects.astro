---
// Import your images here (Update paths if needed)
import ElinaImg from "../../assets/Project/sanjeewa-web-developer-projects-portfolio-elinapix.com-photographer-portfolio.avif";
import MotoImg from "../../assets/Project/sanjeewa-web-developer-projects-portfolio-motogearlk-wordpress-website.avif";
import YogaImg from "../../assets/Project/sanjeewa-web-developer-projects-portfolio-sankalpayoga-yoga-institute-static-website.avif";
---

<section id="projects" class="projects">
  <div class="container">
    <div class="section-header">
      <h2 class="title">Selected Works</h2>
      <p class="subtitle">Engineering results for global businesses.</p>
    </div>

    <!-- Project 1 -->
    <article class="project">
      <div class="project__image">
        <img src={ElinaImg.src} alt="ElinaPix Photography Portfolio" loading="lazy">
      </div>
      <div class="project__content">
        <span class="project__category">seo focus</span>
        <h3 class="project__title">ElinaPix Portfolio</h3>
        <p class="project__desc">
          A high-fidelity visual experience for a French Riviera photographer. 
          Engineered to load 4K images instantly without compromising quality.
        </p>
        <ul class="project__stats">
          <li><strong>SEO:</strong> 100/100 Google Score</li>
          <li><strong>Tech:</strong> WordPress + Elementor</li>
        </ul>
        <a href="https://elinapix.com/" target="_blank" class="project__link">View Live Site &rarr;</a>
      </div>
    </article>

    <!-- Project 2 (Reversed) -->
    <article class="project project--reverse">
      <div class="project__image">
        <img src={MotoImg.src} alt="MotoGear E-Commerce" loading="lazy">
      </div>
      <div class="project__content">
        <span class="project__category">E-Commerce Architecture</span>
        <h3 class="project__title">MotoGear.lk</h3>
        <p class="project__desc">
          Scalable inventory management system handling 5,000+ SKUs. 
          Integrated dynamic shipping calculations and secure payment gateways.
        </p>
        <ul class="project__stats">
          <li><strong>Result:</strong> 20% Conversion Lift</li>
          <li><strong>Tech:</strong> WordPress + WooCommerce</li>
        </ul>
        <a href="https://motogear.lk/" target="_blank" class="project__link">View Live Site &rarr;</a>
      </div>
    </article>

    <!-- Project 3 -->
    <article class="project">
      <div class="project__image">
        <img src={YogaImg.src} alt="Sankalpa Yoga" loading="lazy">
      </div>
      <div class="project__content">
        <span class="project__category">Static Application</span>
        <h3 class="project__title">Sankalpa Yoga</h3>
        <p class="project__desc">
          A pure static architecture using Cloudflare Pages. 
          Zero database calls mean zero security vulnerabilities and instant global loading.
        </p>
        <ul class="project__stats">
          <li><strong>Load Time:</strong> 185 ms</li>
          <li><strong>Tech:</strong> HTML5(Astro) / Static</li>
        </ul>
        <a href="https://sankalpa-yoga.pages.dev/" target="_blank" class="project__link">View Live Site &rarr;</a>
      </div>
    </article>

  </div>
</section>

<style>
  .projects {
    padding: var(--space-xl) 0;
    background-color: #fafafa; /* Slightly off-white to separate sections */
  }

  .section-header {
    margin-bottom: var(--space-lg);
    border-bottom: 1px solid var(--border-color);
    padding-bottom: var(--space-sm);
  }

  .title {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  /* Project Layout */
  .project {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
    align-items: center;
  }

  .project--reverse {
    direction: rtl; /* Cheat code to swap columns */
  }

  .project--reverse .project__content {
    direction: ltr; /* Reset text direction */
  }

  .project__image img {
    width: 100%;
    border-radius: 4px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.05);
    transition: transform 0.4s ease;
  }

  .project__image img:hover {
    transform: scale(1.02);
  }

  .project__category {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--accent-color);
    font-weight: 700;
    display: block;
    margin-bottom: var(--space-sm);
  }

  .project__title {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    line-height: 1.1;
    margin-bottom: var(--space-md);
  }

  .project__desc {
    color: var(--text-secondary);
    margin-bottom: var(--space-md);
    font-size: 1rem;
  }

  .project__stats {
    list-style: none;
    margin-bottom: var(--space-md);
    border-left: 2px solid var(--accent-color);
    padding-left: 1rem;
  }

  .project__link {
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.9rem;
    border-bottom: 2px solid var(--text-primary);
    padding-bottom: 2px;
    transition: color 0.3s;
  }

  .project__link:hover {
    color: var(--accent-color);
    border-color: var(--accent-color);
  }

  @media (max-width: 900px) {
    .project, .project--reverse {
      grid-template-columns: 1fr;
      direction: ltr;
      gap: var(--space-md);
    }
  }
</style>